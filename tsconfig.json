{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@security/*": ["modules/security/*"],
      "@tasks/*": ["modules/tasks/*"]
    },
    "outDir": "./dist"
  }
}
